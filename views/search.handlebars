<div style="padding-top: 50px; margin-top: 0px; min-height: 700px; background-color: white;">

<div class="row buzablue" style="z-index: 950px;">
    
    <div class="col-md-3 col-lg-3 col-sm-3 col-xs-1" ></div>

    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-10" style="margin: 10px;">
      <form method="POST" action="/" id="searchForm" style="width: 100%; margin: 10px; margin-top: 5px;" novalidate>
          <div class="input-group" style="width: 100%;">
            <input type="text" class="form-control card1" placeholder="search around ..." name="site" required style="background-color: #002341; color: white; width: 100%; border-radius: 5px; border: 1px solid #002341; height: 50px;">
          </div>
          <br>
          <input type="number" name="longitudeModal" id="longitude" style="display: none;">

          <input type="number" name="latitudeModal" id="latitude" style="display: none;">


          <input type="submit" style="display: none" />

      </form>
    </div>

    <div class="col-md-3 col-lg-3"></div>

</div>

<div class="row">
  <div class="col-md-7 col-lg-7">
    
  {{#if site}}

    {{#each site}}

    <div class="row">

        <div class="col-md-2 col-lg-2"></div>

        <div class="col-md-9 col-lg-9">
            <div  style="width: 100%; text-align: left; margin: 5px; margin-bottom: 0px; padding: 5px; color: #3c3c3c;">
              
              <a href="{{this.urlSource}}" style="font-size: 20px; color: black; margin: 0px; padding: 0px;" target="_blank">{{this.title}}</a>

              <div style="margin-top: 0px; margin-bottom: 0px;">
                <a href="{{this.urlSource}}" style="font-size: 17px; color: #0486f6; margin: 0px; padding: 0px;" target="_blank">{{this.urlSource}}</a>
              </div>

              <span class="text-concat" style="margin-right: 5px; margin-top: 0px;">{{this.content}}.</span>

            </div>

        </div>

        <div class="col-md-1 col-lg-1">
        </div>

    </div>

    {{/each}}

  {{/if}}

  </div>
  <div class="col-md-5 col-lg-5">

  </div>

</div>
 
</div>

<script type="text/javascript">
  
    $('a').click(function(){

      $(this).css('color', 'purple');

    });

</script>


<script type="text/javascript">

$(document).ready(function(){

      
      if (localStorage.getItem("longitude")) {

            console.log('We are retrieving the location from localStorage Max');

              $('#buttonpopover').show();
              $('#buttonpopover2').show();

              $('#longitude').val(Number(localStorage.getItem("longitude")));
              $('#latitude').val(Number(localStorage.getItem("latitude")));

              $('#longitudeModal').val(Number(localStorage.getItem("longitude")));
              $('#latitudeModal').val(Number(localStorage.getItem("latitude")));          


      } else {

          function getLocation() {
              if (navigator.geolocation) {
                  navigator.geolocation.getCurrentPosition(showPosition);
              } else {
                  x.innerHTML = "Geolocation is not supported by this browser.";
              }
          };

          function showPosition(position) {

              console.log('We are setting the location Max');

              $('#buttonpopover').show();
              $('#buttonpopover2').show();

              localStorage.setItem("longitude", position.coords.longitude);         
              localStorage.setItem("latitude", position.coords.latitude);


              $('#longitude').val(Number(position.coords.longitude));
              $('#latitude').val(Number(position.coords.latitude));

              $('#longitudeModal').val(Number(position.coords.longitude));
              $('#latitudeModal').val(Number(position.coords.latitude));


             };
           
          getLocation();

      };


});

</script>