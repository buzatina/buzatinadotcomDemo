<h2 class="page-header"> Account Register </h2>
{{#if errors}}
  {{#each errors}}
  <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}

{{#if usernameError}}
  <div class="alert alert-danger">{{usernameError}}</div>

	<form method="POST" action="/users/register">
		<div class="form-group">
			<label>Name</label>
			<input type="text" class="form-control" placeholder="Name" name="name" value="{{errBody.name}}">
		</div>
		<div class="form-group">
			<label>Username</label>
			<input type="text" class="form-control" placeholder="Username... you will use this for login" name="username">
		</div>
		<div class="form-group">
			<label>Email</label>
			<input type="email" class="form-control" placeholder="Email" name="email" value="{{errBody.email}}">
		</div> 
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" placeholder="Password" name="password">
		</div>
		<div class="form-group">
			<label>Cornfirm Password</label>
			<input type="password" class="form-control" placeholder="Password" name="password2">
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>

{{else}}

<form method="POST" action="/users/register">
		<div class="form-group">
			<label>Name</label>
