  <div class="py-5" style="margin-top: 50px; min-height: 700px; background-color: white; color: black;">
    <div class="container" style="margin-top: 15px;">
      <div class="row" style="margin-top: 20px;">
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">

          <div>
            <button class="lightColors btn" data-toggle="modal" data-target="#addRecord">Add Record</button>
            <a class="bluedark btn" href="/records">New Records</a>
          </div>

          <!-- Add A Record Modal -->
          <div id="addRecord" class="modal fade" role="dialog">
            <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title lightColors"><b>Add a New Record</b></h4>
                </div>
                <div class="modal-body">
                  <form id="recordForm">
                    <input style="display: none;" type="text" class="form-control" id="userid" value="{{userid}}">
                    <div class="form-group"><label class="darkColors">Site:</label><input type="text" class="form-control" placeholder="Site" id="site"></div>
                    <div class="form-group"><label class="darkColors">Date:</label><input type="date" class="form-control" placeholder="Date" id="recordDate"></div>
                    <div class="form-group"><label class="darkColors">File Type:</label><input type="text" class="form-control" placeholder="Type" id="fileType"></div>
                    <div class="form-group"><label class="darkColors">Condition:</label><input type="text" class="form-control" placeholder="e.g. working, good, bad..." id="condition"></div> 
                    <div class="form-group"><label class="darkColors">Description:</label><input type="text" class="form-control" placeholder="About the record" id="description"></div>
                    <div class="form-group"><label class="darkColors">Uploaded By:</label><input type="text" class="form-control" placeholder="Please enter name or employee number" id="uploader"></div>
                    <div class="form-group"><label class="darkColors">Select File:</label><input type="file" class="form-control" placeholder="Type" id="file" required></div> 
                    <button type="submit" id="record" class="btn btn-block blue">Add Record</button>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>

            </div>
          </div>

          <br>

          {{#if records}}

          <table class="table card1">
            <thead class="bluedark">
              <tr>
                <th>Date</th>
                <th>Department</th>
                <th>Description</th>
                <th>View / Download</th>
              </tr>
            </thead>

            <tbody class="lightColors">
            {{#each records}}
              <tr>
                <td>{{this.date}}</td>
                <td>{{this.site}}</td>
                <td>{{this.description}}</td>
                <td><a class="btn buzablue" href="{{this.fileUrl}}">View/Download</a> </td>
              </tr>
            {{/each}}
            </tbody>

          </table>

          {{else}}

          <div class="card1">
            <span>No records to date. Please add new records by clicking the button above.</span>
          </div>

          {{/if}}

        </div>
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
      </div>
    </div>
  </div>