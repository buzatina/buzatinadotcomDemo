<div class="jumbotron" style="border-radius: 10px; border: 1px solid #black; background-color: black; margin-left: 5px; margin-right: 5px; margin-top: 15px;">

	<form method="POST" action="/" id="searchForm">
		<div class="form-group">
			    <div class="input-group" style="margin-top: 20px; margin-bottom: 20px; margin-right: 10px; margin-left: 10px;">
			      <input type="text" class="form-control" placeholder="search entrepreneurship Conversations..." name="question" required>
			      <span class="input-group-btn">
			        <button style="background-color: white; color: black;" class="btn btn-default glyphicon glyphicon-search" type="submit"></button>
			      </span>
			    </div>
		</div>
	</form>

	<form method="POST" action="/askQuestion" id="askQuestionForm" style="display: none;">
		<div class="form-group">
			    <div class="input-group" style="width: 100%;">
			      <textarea type="text" class="form-control" placeholder="search entrepreneurship Conversations..." name="question" required style="width: 100%;"></textarea>
			      <br>
			    </div>
		</div>

      <span class="input-group-btn">
        <button class="btn btn-default" type="submit">Ask</button>
      </span>

	</form>
	<div style="text-align: center;">
	    <br>
		<span style="text-align: center; font-size: 30px; color: white;"><b>buzatina.com</b></span>
	</div>
	<div style="text-align: center;">
		<span style="text-align: center; font-size: 15px; color: white;"><b>We Enable Entrepreneurship</b></span>
	</div>

</div>

{{#if user}}

	<div style="margin-left: 5px;">
		<span style="color: #1b96fe;" id="askQuestion"><b>Do you have an entrepreneurship question?</b> <b style="color: black">Ask Here..</b></span>
	</div>
	<br>

{{#if question}}

  {{#each question}}


  <div class="row" style="background-color: white; margin-left: 5px; margin-right: 5px; margin-top: 5px; border-radius: 1px; border: 1px solid #d9d8d5;">

                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" style="margin-bottom: 5px;">
                           <h6><b>{{this.name}}</b></h6>
                           <img id="userImg" src="{{this.picQuestion}}" alt="no image" style="height: 65px;" data-toggle="modal" data-target="#"+ {{this._id}}> 
                        </div>

                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                            <h5 style="margin-bottom:0px;"><a href="/question/{{this._id}}"><b>{{this.question}}?</b></a></h5>
                            <h3>{{this.date}}</h3>
                            {{#if comments}}
	                        <span type="button" data-toggle="collapse" data-target="#{{this._id}}"><b style="color: #1b96fe;">comments</b></span>
	                        {{/if}}
                        </div>

   </div>

   <div style="background-color: #fdfdfd; margin-left: 5px; margin-right: 5px; border-radius: 1px; border: 1px solid #d9d8d5;">

	    <div id="{{this._id}}" class="collapse">
	 
		   {{#each comments}}

            <div>

                  <div class="media-left">
                    <img src="{{this.picComment}}" alt="no image" style="height:45px">
                  </div>

                  <div class="media-body">
                      <blockquote >
                      <h2><a href="#"><b>{{this.author}}</b></a></h2>
                      <h4>{{this.userComment}}</h4>
                      </blockquote>                            
                  </div>

            </div>

		   {{/each}}

	    </div>

   		<form method="POST" action="/comment" id="searchForm">
			<div class="form-group">
				    <div class="input-group" style="margin-top: 20px; margin-bottom: 20px; margin-right: 10px; margin-left: 10px;">
				      <input type="text" style="font-size: 11px;" class="form-control" placeholder="comment here..." name="comment" required>
				      <input type="text" value="{{this._id}}" style="font-size: 11px; display: none;" class="form-control" name="idComment">
              <input type="text" value="{{this.userid}}" style="font-size: 11px; display: none;" class="form-control" name="useridQuestion">
				      <input type="text" value="{{this.email}}" style="font-size: 11px; display: none;" class="form-control" name="idEmail">
				      <span class="input-group-btn">
				        <button style="background-color: white; color: black;" class="btn btn-default glyphicon glyphicon-send" type="submit"></button>
				      </span>
				    </div>
			</div>
	   </form>

   </div>
   <br>
  
  {{/each}}

{{/if}}





{{else}}


 

