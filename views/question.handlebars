{{#if user}}

{{#if questionDetailed}}

  <div class="row" style="background-color: white; margin-left: 5px; margin-right: 5px; border-radius: 1px; border: 1px solid #d9d8d5;">

                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" style="margin-bottom: 5px;">
                           <h6><b> {{questionDetailed.name}}</b></h6>
                           <img id="userImg" src="{{questionDetailed.picQuestion}}" alt="no image" style="height: 65px;" data-toggle="modal" data-target="#"+ {{questionDetailed._id}}>
                        </div>

                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                            <h5 style="margin-bottom:0px;"><b>{{questionDetailed.question}}?</b></h5>
                            <h3>{{questionDetailed.date}}</h3>
                            {{#if questionDetailed.comments}}
                            <span type="button"><b style="color: #1b96fe;">comments</b></span>
                            {{/if}}

                        </div>

   </div>

   <div style="background-color: #fdfdfd; margin-left: 5px; margin-right: 5px; border-radius: 1px; border: 1px solid #d9d8d5;">

      <div>
   
       {{#each questionDetailed.comments}}

            <div>

                  <div class="media-left">
                    <img src="this.picComment" alt="no image" style="height:45px">
                  </div>

                  <div class="media-body">
                      <blockquote >
                      <h2><a href="#"><b>{{this.author}}</b></a></h2>
                      <h4>{{this.userComment}}</h4>
                      </blockquote>                            
                  </div>

            </div>

       {{/each}}

      </div>

      <form method="POST" action="/comment" id="searchForm">
      <div class="form-group">
            <div class="input-group" style="margin-top: 20px; margin-bottom: 20px; margin-right: 10px; margin-left: 10px;">
              <input type="text" style="font-size: 11px;" class="form-control" placeholder="comment here..." name="comment" required>
              <input type="text" value="{{questionDetailed._id}}" style="font-size: 11px; display: none;" class="form-control" name="idComment">
              <span class="input-group-btn">
                <button style="background-color: white; color: black;" class="btn btn-default glyphicon glyphicon-send" type="submit"></button>
              </span>
            </div>
      </div>
     </form>
   </div>
   <br>

{{/if}}



